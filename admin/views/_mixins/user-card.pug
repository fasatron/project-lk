mixin user-card(user)
  .mentor
    .row.mentor-item-row
      .col-xs-3.text-center.mentor-info
        div
          img.img-circle.headImg(alt='Avatar' src=user.avatar)
        .rate
          strong= `$ ${user.rate}`
          small / hour
          br
          a.btn.btn-success.messageBtn(href=`/admin/users/${user.id}/update`) View Profile       
      .col-xs-9.mentor-details
        a.name(href=`/admin/users/${user.id}/update`)= user.full_name
        span.ratingNum= user.rating
