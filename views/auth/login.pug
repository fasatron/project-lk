extends ../_layout

block content
  .container
    .row.main
      .panel-heading
        .panel-title.text-center
          h1.title Вход в систему
          hr
      .main-login.main-center
        form.form-horizontal(method='post', action='#')
          .form-group
            label.cols-sm-2.control-label(for='username') Login
            .cols-sm-10
              .input-group
                span.input-group-addon
                  i.fa.fa-users.fa(aria-hidden='true')
                input#username.form-control(type='text', name='username', placeholder='Логин')
          .form-group
            label.cols-sm-2.control-label(for='password') Password
            .cols-sm-10
              .input-group
                span.input-group-addon
                  i.fa.fa-lock.fa-lg(aria-hidden='true')
                input#password.form-control(type='password', name='password', placeholder='Пароль')
          .form-group
            button.btn.btn-primary.btn-lg.btn-block.login-button(type='button') Sign In
